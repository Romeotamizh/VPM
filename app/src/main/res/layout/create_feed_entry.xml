<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/off_black"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/edit_name_prompt"
        style="@style/CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the room name"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_name_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name_prompt"
        app:srcCompat="@drawable/rounded_rectangle__"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/edit_name"
        style="@style/CustomTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:imeOptions="actionDone"
        android:gravity="center_vertical|start"
        android:layout_marginHorizontal="8dp"
        android:hint="Room name must be unique"
        android:textColor="@color/black"
        android:textColorHint="@color/black_75"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_name_container"
        app:layout_constraintEnd_toEndOf="@id/edit_name_container"
        app:layout_constraintStart_toStartOf="@id/edit_name_container"
        app:layout_constraintTop_toTopOf="@id/edit_name_container"
         />

    <CheckBox
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_name_container"
        style="@style/CustomTextView"
        android:textColor="@color/white"
        android:text="isLive"
        android:textSize="16dp"
        android:checked="true"
        android:clickable="true"
        android:id="@+id/is_live_check"
        android:focusable="true"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/created_on"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="created on --- "
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/is_live_check"
        app:layout_constraintBottom_toBottomOf="@id/is_live_check"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"


        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/create_button"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/is_live_check"
        app:srcCompat="@drawable/rounded_rectangle__"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/accent" />

    <TextView
        style="@style/CustomTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Create"
        android:id="@+id/create_or_edit_text"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/create_button"
        app:layout_constraintEnd_toEndOf="@id/create_button"
        app:layout_constraintStart_toStartOf="@id/create_button"
        app:layout_constraintTop_toTopOf="@id/create_button" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cancel_button"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/is_live_check"
        app:srcCompat="@drawable/rounded_rectangle__"
        app:layout_constraintEnd_toStartOf="@id/create_button"
        android:layout_marginHorizontal="16dp"
        app:tint="@color/grey" />

    <TextView
        style="@style/CustomTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Cancel"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"
        app:layout_constraintEnd_toEndOf="@id/cancel_button"
        app:layout_constraintStart_toStartOf="@id/cancel_button"
        app:layout_constraintTop_toTopOf="@id/cancel_button" />




</androidx.constraintlayout.widget.ConstraintLayout>